<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="AppTheme.Launcher" parent="AppTheme">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>


    <style name="Button.Submit" parent="Widget.AppCompat.Button.Colored">

    </style>


    <style name="EditText">

    </style>


    <style name="TextInputLayout">

    </style>


    <style name="Refresher">

    </style>


    <style name="RecyclerView">

    </style>


    <style name="Fab">

    </style>


    <style name="TextView" parent="Base.TextAppearance.AppCompat">

    </style>


    <style name="TextView.Title" parent="Base.TextAppearance.AppCompat.Title">

    </style>


    <style name="TextView.Subhead" parent="Base.TextAppearance.AppCompat.Subhead">

    </style>


    <style name="TextView.Body1" parent="Base.TextAppearance.AppCompat.Body1">

    </style>


    <style name="TextView.Body2" parent="Base.TextAppearance.AppCompat.Body2">

    </style>


    <style name="TextView.Large" parent="Base.TextAppearance.AppCompat.Large">

    </style>


    <style name="AppBarLayout" parent="AppTheme.AppBarOverlay">

    </style>


    <style name="Popup" parent="AppTheme.PopupOverlay">

    </style>


    <style name="Toolbar" parent="AppTheme.PopupOverlay">
        <item name="background">?attr/colorPrimary</item>
    </style>
    
    
    <style name="Divider">
        <item name="android:background">@color/divider</item>
    </style>
</resources>
