<resources>

    <style name="AppTheme.Light" parent="Theme.AppCompat.Light">
        
        <item name="image_tint_color">#000000</item>

        <item name="toolbarThemeOverlay">@style/ThemeOverlay.AppCompat.Light</item>

        <item name="fabStyle">@style/AppTheme.Light.FabStyle</item>

        <item name="navigationHeaderTextStyle">@style/AppTheme.Light.NavigationHeaderTextStyle</item>

    </style>


    <style name="AppTheme.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Light.Launcher" parent="AppTheme.Light">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>


    <style name="AppTheme.Light.FabStyle" parent="Widget.Design.FloatingActionButton">
    </style>


    <style name="AppTheme.Light.NavigationHeaderTextStyle" parent="TextView.Large">
    </style>

</resources>
