<resources>

    <style name="BaseAppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme" parent="BaseAppTheme"/>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar"/>

    <style name="ListCardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_marginTop">@dimen/list_item_top_margin</item>
        <item name="android:layout_marginBottom">@dimen/list_item_bottom_margin</item>
        <item name="android:layout_marginStart">@dimen/list_item_left_margin</item>
        <item name="android:layout_marginEnd">@dimen/list_item_right_margin</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ListItem">
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:paddingTop">@dimen/list_item_top_padding</item>
        <item name="android:paddingBottom">@dimen/list_item_bottom_padding</item>
        <item name="android:paddingStart">@dimen/list_item_left_padding</item>
        <item name="android:paddingEnd">@dimen/list_item_right_padding</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="ErrorTextView" parent="TextAppearance.AppCompat.Large"/>

    <style name="LoadText" parent="TextAppearance.AppCompat.Large"/>


    <style name="Button.Submit" parent="Widget.AppCompat.Button.Colored">

    </style>


    <style name="EditText">

    </style>


    <style name="TextInputLayout">

    </style>


    <style name="Refresher">

    </style>


    <style name="RecyclerView">

    </style>


    <style name="Fab">

    </style>


    <style name="TextView" parent="Base.TextAppearance.AppCompat">

    </style>


    <style name="TextView.Title" parent="Base.TextAppearance.AppCompat.Title">

    </style>


    <style name="TextView.Subhead" parent="Base.TextAppearance.AppCompat.Subhead">

    </style>


    <style name="TextView.Body1" parent="Base.TextAppearance.AppCompat.Body1">

    </style>


    <style name="TextView.Body2" parent="Base.TextAppearance.AppCompat.Body2">

    </style>


    <style name="TextView.Large" parent="Base.TextAppearance.AppCompat.Large">

    </style>


    <style name="Divider">
        <item name="android:background">@color/divider</item>
    </style>



</resources>
